<%- contentFor("title") %>
    Register

<%- contentFor("styles") %>
    <!-- For CSS -->
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/static/common/styles/Register.css">

<%- contentFor("content") %>
    <div class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="assets/images/clothesStore.jpg" alt="login" class="login-card-img">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <div class="brand-wrapper">
                                <img src="assets/images/logo.png" alt="logo" class="logo"
                                    style="justify-content: center;">
                            </div>
                            <p class="login-card-description">Create an Account</p>
                            <form action="">
                                <div class="form-group">
                                    <label for="name" class="sr-only">Account Name</label>
                                    <input type="text" name="name" id="email" class="form-control"
                                        placeholder="Full Name">
                                </div>

                                <div class="form-group">
                                    <label for="email" class="sr-only">Email</label>
                                    <input type="email" name="email" id="email" class="form-control"
                                        placeholder="Email Address">
                                </div>

                                <div class="form-group mb-4">
                                    <label for="password" class="sr-only">Password</label>
                                    <input type="password" name="password" id="password" class="form-control"
                                        placeholder="Password">
                                </div>

                                <div class="form-group mb-4">
                                    <label for="confirm" class="sr-only">Password</label>
                                    <input type="password" name="confirm" id="confirm" class="form-control"
                                        placeholder="Confirm Password">
                                </div>

                                <input name="login" id="login" class="btn btn-success btn-block login-btn mb-4"
                                    type="button" value="Create Account"
                            </form>
                            <p class="login-card-footer-text">Already have an account? <a
                                    href="./LoginPage.html" class="text-reset">Login here</a></p>
                            <nav class="login-card-footer-nav">
                                <a href="#!">Terms of use</a>
                                <a href="#!">Privacy policy</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>